---
import type { ButtonProps as Props } from "mads-types";
import styles from "./styles";

const {
  color = "#000000",
  variant = "fill:md",
  class: className,
  style,
  ...props
} = Astro.props as Props;
---

<button
  class={styles.getClass(variant, className)}
  style={{
    ...styles.getStyle(color),
    ...(style as astroHTML.JSX.CSSProperties),
  }}
  {...props}
>
  <slot />
</button>
