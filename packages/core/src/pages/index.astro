---
import { Button } from "../atoms";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="#" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Playground</title>
  </head>
  <body class="grid place-items-center w-screen h-screen">
    <main class="flex flex-col gap-2">
      <h2>Fill</h2>
      <div class="flex gap-4 items-center mb-2">
        <Button variant="fill" size="sm">Small</Button>
        <Button variant="fill" size="md">Medium</Button>
        <Button variant="fill" size="lg">Large</Button>
        <Button variant="fill" disabled>Disabled</Button>
      </div>

      <h2>Outline</h2>
      <div class="flex gap-4 items-center mb-2">
        <Button variant="outline" size="sm">Small</Button>
        <Button variant="outline" size="md">Medium</Button>
        <Button variant="outline" size="lg">Large</Button>
        <Button variant="outline" disabled>Disabled</Button>
      </div>

      <h2>Text</h2>
      <div class="flex gap-4 items-center mb-2">
        <Button variant="text" size="sm">Small</Button>
        <Button variant="text" size="md">Medium</Button>
        <Button variant="text" size="lg">Large</Button>
        <Button variant="text" disabled>Disabled</Button>
      </div>

      <h2>Custom</h2>
      <div class="flex gap-4 items-center mb-2">
        <Button color="red">Custom</Button>
        <Button color="red" variant="outline">Custom</Button>
        <Button color="red" variant="text">Custom</Button>

        <Button class="bg-blue-600">Custom</Button>
        <Button
          class="text-blue-600 border-blue-600 hover:bg-blue-600"
          variant="outline">Custom</Button
        >
        <Button class="bg-blue-600" variant="text">Custom</Button>
      </div>
    </main>
  </body>
</html>
