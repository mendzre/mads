---
import "mads-core/styles.css";
import { Heading, Button } from "mads-core";
import { Code } from "astro-expressive-code/components";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="#" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>mads</title>
  </head>
  <body>
    <header
      class="flex flex-col justify-center gap-3 max-w-prose h-screen px-4 py-2 mx-auto"
    >
      <Heading>Mads</Heading>
      <Heading variant="h6"
        >A beautiful, easy-to-use, and customizable Design System.</Heading
      >
      <Code
        title="index.astro"
        lang="astro"
        code={`<Heading>Mads</Heading>
<Heading variant="h6">
  A beautiful, easy-to-use, and customizable Design System.
</Heading>
<Button variant="outline">View docs</Button>
`}
        mark={[`variant="h6"`, `variant="outline"`]}
        wrap
      />
      <Button variant="outline" size="lg">Get started</Button>
      <Code class="w-fit" frame="none" lang="bash" code="npx astro add mads-core" />
    </header>
  </body>
</html>
